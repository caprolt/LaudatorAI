# LaudatorAI Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: Database Configuration
# =============================================================================
# PostgreSQL connection string (Railway will auto-provide DATABASE_URL)
DATABASE_URL=postgresql://username:password@hostname:port/database

# =============================================================================
# REQUIRED: Redis Configuration
# =============================================================================
# Redis connection string (Railway will auto-provide REDIS_URL)
REDIS_URL=redis://username:password@hostname:port/database

# =============================================================================
# REQUIRED: Application Configuration
# =============================================================================
# Server configuration (Railway will auto-provide PORT and HOST)
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# REQUIRED: CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins for CORS
# Include your frontend domain(s) here
BACKEND_CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# =============================================================================
# OPTIONAL: LLM Configuration
# =============================================================================
# OpenAI API key for AI-powered features
OPENAI_API_KEY=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
# LLM provider: openai, ollama, huggingface (default: openai)
LLM_PROVIDER=openai
# LLM model: gpt-4, gpt-3.5-turbo, gpt-4-turbo, etc. (default: gpt-4)
LLM_MODEL=gpt-4.1-nano

# =============================================================================
# OPTIONAL: File Storage Configuration (MinIO/S3)
# =============================================================================
# MinIO/S3 configuration for file storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=laudatorai
MINIO_SECURE=false

# =============================================================================
# OPTIONAL: Monitoring and Logging
# =============================================================================
# Sentry DSN for error tracking and monitoring
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT ONLY: Local Database Configuration
# =============================================================================
# These are used as fallbacks when DATABASE_URL is not provided
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=laudatorai
